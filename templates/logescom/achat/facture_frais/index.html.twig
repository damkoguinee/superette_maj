{% extends 'base_logescom.html.twig' %}

{% block title %}liste des factures{% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}
{% block bandeau %} {% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}

{% block produits %}
{% if app.request.query.has('search') %}
        {% set search = app.request.query.get('search') %}
    {% else %}
        {% set search = search %}
    {% endif %}

    {% if app.request.query.has('date1') %}
        {% set date1 = app.request.query.get('date1') %}
        {% set date2 = app.request.query.get('date2') %}

    {% else %}
        {% set date1 = "now"|date("Y-01-01") %}
        {% set date2 = "now"|date("Y-m-d") %}
    {% endif %}

    {% set nbrePages = facture_frais.nbrePages %}
    {% set pageEncours = facture_frais.pageEncours %} 
    {% set id = lieu_vente.id %}

    <div class="row">
        {% include "_common/_nav_achat.html.twig" %}
        <div class="col-sm-12 col-md-10">
            {% include "_common/_messages_flash.html.twig" %}
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead class="sticky-top bg-light text-center">
                    <tr>
                        <th colspan="11" class="text-center bg-info text-white">
                            Liste des factures frais 
                            <a class="btn btn-warning" href="{{ path('app_logescom_achat_facture_frais_new', {lieu_vente : lieu_vente.id}) }}">Ajouter une facture</a>
                        </th>
                    </tr>
                    <tr>
                        <th colspan="11" class="text-center bg-info text-white">
                            <div class="row align-items-center ">
                                <div class="col-7">
                                    <form class="form w-100">
                                        <div class="row">
                                            <div class="col-sm-12 col-md-5">
                                                <input type="date" name="date1" value="{{ date1 }}" class="form-control" onChange="this.form.submit()" max="{{ date2 }}"> 
                                                <input type="hidden" name="id_client_search" value="{{ search }}">
                                            </div>
                                            <div class="col-1">au</div>
                                            <div class="col-sm-12 col-md-6">
                                                <input type="date" name="date2" value="{{ date2 }}" class="form-control" onChange="this.form.submit()" min="{{ date1}}" max="{{ "now"|date("Y-m-d") }}">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-5">
                                    <input type="text" name="search" class="form-control" id="search_client" placeholder="Récherchez un collaborateur">
                                </div>   
                                <div class="bg-light text-white" id="result-search"></div>
                            </div>
                        </th>
                    <tr>
                    <tr>
                        <th class="bg-info text-white">N°</th>
                        <th class="bg-info text-white">Doc</th>
                        <th class="bg-info text-white">Date</th>
                        <th class="bg-info text-white">N°Facture</th>
                        <th class="bg-info text-white">Commentaire</th>
                        <th class="bg-info text-white">Collaborateur</th>
                        <th class="bg-info text-white">TTC</th>
                        <th class="bg-info text-white">TVA</th>
                        <th class="bg-info text-white">Dévise</th>
                        <th class="bg-info text-white">Taux</th>
                        <th class="bg-info text-white">actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for key, facture_frais in facture_frais.data %}
                    <tr>
                        <td class="text-center">{{ key + 1 }}</td>
                        <td class="text-center">
                        {% if facture_frais.document is not empty %}
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-primary mx-1"  href="{{ asset('achatFournisseur/facture/' ~ facture_frais.document) }}" target="_blank"><i class="fa-solid fa-file-pdf fs-3"></i> </a>

                            </div>
                        {% endif %}
                        </td>
                        <td class="text-center">{{ facture_frais.dateFacture ? facture_frais.dateFacture|date('d/m/Y') : '' }}</td>
                        <td class="text-center">{{ facture_frais.numeroFacture }}</td>
                        <td>{{ facture_frais.commentaire|ucfirst  }}</td>
                        <td>{{ facture_frais.fournisseur.prenom|ucwords  }}</td>
                        <td class="text-end">{{ facture_frais.devise.nomDevise == 'gnf' ? facture_frais.montant|number_format(0,',',' ') : facture_frais.montant|number_format(2,',',' ') }}</td>
                        <td class="text-end">{{ facture_frais.devise.nomDevise == 'gnf' ? facture_frais.tva|number_format(0,',',' ') : facture_frais.tva|number_format(2,',',' ') }}</td>
                        <td class="text-center">{{ facture_frais.devise.nomDevise|strtoupper}}</td>
                        <td class="text-end">{{ facture_frais.taux|number_format(2,',',' ') }}</td>

                        <td class="text-center">
                            <a class="btn btn-success" href="{{ path('app_logescom_achat_facture_frais_show', {'id': facture_frais.id, lieu_vente : lieu_vente.id}) }}"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11">Aucune facture trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% set path = 'app_logescom_achat_facture_frais_index'  %}
                                  
            {% if nbrePages > 1 %}                    

                {% if nbrePages %}
                    <nav aria-label="Page navigation example ">
                        <ul class="pagination justify-content-start">
                            {% if pageEncours > 1 %}
                                <li class="page-item ">
                                    <a class="page-link" href="{{path(path, {lieu_vente : id, pageEncours : (pageEncours - 1), search : search})}}">&lt;</a>
                                </li>
                            {% else %}
                                <li class="page-item disabled" ><a class="page-link">&lt;</a></li>
                            {% endif %}
                            {% for page in 1..nbrePages %}                
                                <li class="page-item {{ ( page == pageEncours) ? 'active' : ''}} "><a class="page-link" href="{{path(path, {lieu_vente : id, pageEncours : page, search : search})}}">{{page}}</a></li>
                            {% endfor %}
                            {% if pageEncours < nbrePages %}
                                <li class="page-item "><a class="page-link" href="{{path(path, {lieu_vente : id,pageEncours : pageEncours + 1, search : search} ) }}">&gt;</a></li>
                            {% else %}
                                <li class="page-item disabled "><a href="" class="page-link" >&gt;</a></li>
                            {% endif %}
                            </li>
                        </ul>
                    </nav>
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}
