{% extends 'base_logescom.html.twig' %}

{% block title %}ajouter une facture fournisseur{% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}
{% block bandeau %} {% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}

{% block produits %}
    {% if app.request.query.has('etat_facture') %}
        {% set etat_facture = app.request.query.get('etat_facture') %}
    {% else %}
        {% set etat_facture = "non payé" %}
    {% endif %}
    <div class="row">
        {% include "_common/_nav_achat.html.twig" %}
        <div class="col-sm-12 col-md-10">
            {% include "_common/_messages_flash.html.twig" %}
            <h3>Enregistrer une facture fournisseur</h3>
            <form action="">
                <div class="row my-2">
                    <div class="col-3">
                        <select onChange="this.form.submit()" name="etat_facture" id="" class="form-select">
                            <option value="{{etat_facture}}">{{etat_facture|ucfirst}}</option>
                            <option value="non payé">Non Payé</option>
                            <option value="payé">Payé</option>
                        </select>
                    </div>
                </div>
            </form>
            {{ include('logescom/achat/achat_fournisseur/_form.html.twig') }}

            <a class="btn btn-light my-4" href="{{ path('app_logescom_achat_achat_fournisseur_index', {lieu_vente : lieu_vente.id}) }}">Retour</a>
        </div>
    </div>
{% endblock %}

