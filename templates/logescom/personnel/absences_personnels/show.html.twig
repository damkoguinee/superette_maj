{% block produits %}
    <div class="row">
        {% include "_common/_nav_personnel.html.twig" %}
        <div class="col-sm-12 col-md-10">
            <table class="table table-striped table-hover align-middle m-auto">
                <tbody>
                    <tr>
                        <th>Prénom & Nom</th>
                        <td class="text-start">{{ absences_personnel.personnel.prenom | ucwords ~ " " ~ absences_personnel.personnel.nom | strtoupper  }}</td>
                    </tr>
                    <tr>
                        <th>Absence/Heures Sup</th>
                        <td>{{ absences_personnel.heureAbsence }} h</td>
                    </tr>
                    <tr>
                        <th>Date Absence</th>
                        <td>{{ absences_personnel.dateAbsence ? absences_personnel.dateAbsence|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Saisit par </th>
                        <td class="text-start">{{ absences_personnel.saisiePar.prenom | ucwords ~ " " ~ absences_personnel.saisiePar.nom | strtoupper  }}</td>
                    </tr>

                    <tr>
                        <th>Date de Saisie</th>
                        <td>{{ absences_personnel.dateSaisie ? absences_personnel.dateSaisie|date('d/m/Y H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between my-4">

                <a class="btn btn-light" href="{{ path('app_logescom_personnel_absences_personnel_index', {lieu_vente : lieu_vente.id }) }}">Retour</a>

                <a class="btn btn-danger" onClick="alerteConfirmation()" href="{{ path('app_logescom_personnel_absences_personnels_delete' , {'id': absences_personnel.id, lieu_vente : lieu_vente.id }) }}">Annuler</a>

                {# <a href="{{ path('app_logescom_personnel_absences_personnels_edit', {'id': absences_personnel.id}) }}">edit</a> #}

                {# {{ include('comptable/absences_personnels/_delete_form.html.twig') }} #}
            </div>
        </div>
    </div>
{% endblock %}
