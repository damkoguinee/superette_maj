{% block produits %}
    <div class="row my-2">
        {% include "_common/_nav_personnel.html.twig" %}

        <div class="col-sm-12 col-md-10">
            {{ include("_common/_messages_flash.html.twig") }}
            
            <table class="table table-bordered table-striped table-hover align-middle">

                <thead class="sticky-top bg-light text-center">
                    <tr>
                        <th colspan="7" class="text-center bg-info text-white">
                            Liste des absences/heures sup
                            <a class="btn btn-warning" href="{{ path('app_logescom_personnel_absences_personnel_new', {lieu_vente : lieu_vente.id}) }}">Enregistrer absence / Heures Sup</a>
                        </th>
                    </tr>
                    <tr>
                        <th class="bg-info text-white">N°</th>
                        <th class="bg-info text-white">Date</th>
                        <th class="bg-info text-white">Prénom & Nom</th>
                        <th class="bg-info text-white">Téléphone</th>
                        <th class="bg-info text-white">Rattachement</th>
                        <th class="bg-info text-white">Absence/Heures Sup</th>
                        <th class="bg-info text-white">actions</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    {% for key, absences_personnel in absences_personnels %}
                        <tr>
                            <td>{{(key +1 )}}</td>
                            <td>{{ absences_personnel.dateAbsence ? absences_personnel.dateAbsence |date('d/m/Y') : '' }}</td>
                            <td class="text-start">{{ absences_personnel.personnel.prenom | ucwords ~ " " ~ absences_personnel.personnel.nom | strtoupper  }}</td>
                            <td>{{ absences_personnel.personnel.telephone  }}</td>
                            <td>
                                {{absences_personnel.lieuVente.lieu| ucfirst }}
                            </div>
                            <td>{{absences_personnel.heureAbsence}} h</td>
                            <td>
                                <a class="btn btn-success" href="{{ path('app_logescom_personnel_absences_personnel_show', {'id': absences_personnel.id, lieu_vente : lieu_vente.id}) }}"><i class="fa fa-eye"></i></a>
                                {# <a class="btn btn-warning" href="{{ path('app_logescom_personnel_absences_personnels_edit', {'id': absences_personnel.id}) }}"><i class="fa fa-edit"></i></a> #}
                            </td>
                            
                        </tr>
                    {% else %}
                        <tr><td colspan="7">Aucune absence trouvée</td></tr>
                        
                        
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}