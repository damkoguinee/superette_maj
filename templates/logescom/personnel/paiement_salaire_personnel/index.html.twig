{% extends 'base_logescom.html.twig' %}
{% set queryParams = app.request.query.all %}
{% set queryString = queryParams|filter((v, k) => k != "page" and k != "ajustement" and k != "id_stock") | url_encode %}

{% block title %}liste des salaires{% endblock %}
{% block bandeau %} {% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}

{% block produits %}

    <div class="row my-2">
        {% include "_common/_nav_personnel.html.twig" %}

        <div class="col-sm-12 col-md-10">
            {{ include("_common/_messages_flash.html.twig") }}
            
            <table class="table table-bordered table-striped table-hover align-middle">

                <thead class="sticky-top bg-light text-center">
                    <tr>
                        <th colspan="6" class="text-center bg-info text-white">
                            Liste des salaires payés
                            <a class="btn btn-warning" href="{{ path('app_logescom_personnel_paiement_salaire_personnel_new', {lieu_vente : lieu_vente.id}) }}">Enregistrer un salaire</a>
                        </th>
                    </tr>
                    <tr>
                        <th class="bg-info text-white">N°</th>
                        <th class="bg-info text-white">Période</th>
                        <th class="bg-info text-white">Prénom & Nom</th>
                        <th class="bg-info text-white">Rattachement</th>
                        <th class="bg-info text-white">Salaire Net</th>
                        <th class="bg-info text-white">actions</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    {% for key, paiements_salaires_personnel in paiements_salaires_personnels %}
                        <tr>
                            <td>
                                {{(key +1 )}}
                                <a target="_blank" class="btn btn-success" href="{{path('app_logescom_personnel_paiement_salaire_personnel_fiche_paie', { id : paiements_salaires_personnel.id, lieu_vente : lieu_vente.id } ) }}" class="btn btn-secondary btn-sm"><i class="fa fa-file-pdf"></i></a>
                            </td>
                            <td>{{ paiements_salaires_personnel.periode ? paiements_salaires_personnel.periode |date('m-Y') : '' }}</td>
                            <td class="text-start">{{ paiements_salaires_personnel.personnel.prenom | ucwords ~ " " ~ paiements_salaires_personnel.personnel.nom | strtoupper  }}</td>
                            <td>{{paiements_salaires_personnel.personnel.lieuVente.lieu | ucfirst }}</td>
                            <td>{{paiements_salaires_personnel.salaireNet | number_format(0,',',' ')}}</td>
                            <td>
                                <a class="btn btn-success" href="{{ path('app_logescom_personnel_paiement_salaires_personnel_show', {'id': paiements_salaires_personnel.id, lieu_vente : lieu_vente.id}) }}"><i class="fa fa-eye"></i></a>
                                {# <a class="btn btn-warning" href="{{ path('app_logescom_personnel_absences_personnels_edit', {'id': absences_personnel.id}) }}"><i class="fa fa-edit"></i></a> #}
                            </td>
                            
                        </tr>
                    {% else %}
                        <tr><td colspan="7">Aucune prime trouvée</td></tr>
                        
                        
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}