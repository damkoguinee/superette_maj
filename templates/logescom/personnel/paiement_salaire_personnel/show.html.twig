{% extends 'base.html.twig' %}

{% block title %}detail salaire{% endblock %}

{% block body %}
    <div class="row">
        {% include "_common/_nav_personnel.html.twig" %}
        <div class="col-sm-12 col-md-10">
            <table class="table table-striped table-hover align-middle m-auto">
                <tbody>
                    <tr>
                        <th>Prénom & Nom</th>
                        <td class="text-start">{{ paiements_salaires_personnel.personnel.prenom | ucwords ~ " " ~ paiements_salaires_personnel.personnel.nom | strtoupper  }}</td>
                    </tr>

                    <tr>
                        <th>Contact</th>
                        <td class="text-start">{{ paiements_salaires_personnel.personnel.telephone | ucwords  }}</td>
                    </tr>

                    <tr>
                        <th>Rattachement</th>
                        <td class="text-start">{{ paiements_salaires_personnel.personnel.lieuVente.lieu | ucwords  }}</td>
                    </tr>

                    <tr>
                        <th class="text-success fw-bold">Période</th>
                        <td class="text-success fw-bold">{{ paiements_salaires_personnel.periode ? paiements_salaires_personnel.periode|date('m-Y') : '' }}</td>
                    </tr>

                    <tr >
                        <th class="text-success fw-bold">Salaire Net</th>
                        <td class="text-success fw-bold">{{ paiements_salaires_personnel.salaireNet | number_format(0,',',' ') ~ " / Mode de paie: " ~ paiements_salaires_personnel.typePaiement.designation ~ " / Infos paie: " ~ paiements_salaires_personnel.commentaires }}</td>
                    </tr>
                    
                    <tr>
                        <th>Compte de retrait</th>
                        <td>{{ paiements_salaires_personnel.compteRetrait.designation | ucwords }}</td>
                    </tr>
                    <tr>
                        <th>Salaire Brut</th>
                        <td>{{ paiements_salaires_personnel.salaireBrut | number_format(0,',',' ') }}</td>
                    </tr>
                    <tr>
                        <th>Prime</th>
                        <td>{{ paiements_salaires_personnel.prime | number_format(0,',',' ') }}</td>
                    </tr>
                    <tr>
                        <th>Avance Salaire</th>
                        <td>{{ paiements_salaires_personnel.avanceSalaire | number_format(0,',',' ') }}</td>
                    </tr>
                    <tr>
                        <th>Cotisation</th>
                        <td>{{ paiements_salaires_personnel.cotisation | number_format(0,',',' ') }}</td>
                    </tr>
                    

                    <tr>
                        <th>Traité par</th>
                        <td class="text-start">{{ paiements_salaires_personnel.saisiePar.prenom | ucwords ~ " " ~ paiements_salaires_personnel.saisiePar.nom | strtoupper ~ " le " ~  ( paiements_salaires_personnel.dateSaisie ? paiements_salaires_personnel.dateSaisie|date('d/m/Y H:i:s') : '') }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-between my-4">
                <a class="btn btn-light" href="{{ path('app_logescom_personnel_paiement_salaire_personnel_index' , {lieu_vente : lieu_vente.id}) }}">Retour</a>

                <a class="btn btn-danger" onClick="alerteConfirmation()" href="{{ path('app_logescom_personnel_paiement_salaire_personnel_delete' , {'id': paiements_salaires_personnel.id, lieu_vente : lieu_vente.id}) }}">Annuler</a>
            </div>
        </div>
    </div>
{% endblock %}
