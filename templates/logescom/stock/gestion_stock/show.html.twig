{% extends 'base_logescom.html.twig' %}
{% set queryParams = app.request.query.all %}
{% set queryString = queryParams|filter((v, k) => k != "page" and k != "ajustement" and k != "id_stock") | url_encode %}

{% block title %}détail stock{% endblock %}
{% block bandeau %} {% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}

{% block produits %}
    {# {% if app.request.query.has('search') %}
        {% set search = app.request.query.get('search') %}
    {% else %}
        {% set search = search %}
    {% endif %} #}

    <div class="row">
        {% include "_common/_nav_stock.html.twig" %}
        <div class="col-sm-12 col-md-10" style="overflow:auto;" >
            {% include "_common/_messages_flash.html.twig" %}
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <table class="table table-bordered table-striped table-hover align-middle">
                        <tbody>
                            <tr>
                                <th>id</th>
                                <td>{{stock.products.id}}</td>
                            </tr>
                            <tr>
                                <th>Réference</th>
                                <td>{{stock.products.reference|ucwords}}</td>
                            </tr>
                            <tr>
                                <th>Codebarre</th>
                                <td>{{stock.products.codeBarre|strtoupper}}</td>
                            </tr>
                            <tr>
                                <th>Désignation</th>
                                <td>{{stock.products.designation|ucwords}}</td>
                            </tr>
                            <tr>
                                <th>Catégorie</th>
                                <td>{{stock.products.categorie.nameCategorie|ucwords}}</td>
                            </tr>

                            <tr>
                                <th>Quantité</th>
                                <td>{{stock.quantite}}</td>
                            </tr>
                            <tr>
                                <th>Prix de vente</th>
                                <td>{{stock.prixVente|number_format(0,',',' ')}}</td>
                            </tr>
                            <tr>
                                <th>Prix d'achat</th>
                                <td>{{stock.prixAchat|number_format(0,',',' ')}}</td>
                            </tr>
                            <tr>
                                <th>Prix de revient</th>
                                <td>{{stock.prixRevient|number_format(0,',',' ')}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                {% if is_granted("ROLE_GESTIONNAIRE") %}
                    <div class="col-sm-12 col-md-6 bg-danger bg-opacity-50 py-2">
                        <h5 class="text-center mb-2">Ajouter une anomalie /{{stock.products.designation|ucwords}}/ {{ stock.stockProduit.nomStock|ucwords}}</h5>
                        
                        {{ include('logescom/stock/anomalie_produit/_form.html.twig') }}
                    </div>
                {% endif %}
            </div>

            <div>
                <table class="table table-bordered table-striped table-hover align-middle" >
                    <thead class="sticky-top bg-info text-center text-white">
                        <tr>
                            <th colspan="8">
                                <div class="d-flex justify-content-between">
                                    <p>Liste des anomalies</p>
                                </div>
                            </th>
                        </tr>
                        
                        <tr>
                            <th>N°</th>
                            <th>Date</th>
                            <th>Référence</th>
                            <th>Désignation</th>
                            <th>Stock</th>
                            <th>Quantite</th>
                            <th>P. Revient</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for key, anomalie_produit in liste_anomalies %}
                            <tr>
                                <td class="text-center">{{ (key + 1)}}</td>
                                <td class="text-center">{{ anomalie_produit.dateAnomalie ? anomalie_produit.dateAnomalie|date('d/m/Y') : '' }}</td>
                                <td>{{anomalie_produit.product.reference | ucfirst}}</td>
                                <td>{{anomalie_produit.product.designation | ucfirst}}</td>
                                <td>{{anomalie_produit.stock.nomStock | ucfirst}}</td>
                                <td class="text-center">{{ anomalie_produit.quantite }}</td>
                                <td class="text-end">{{ anomalie_produit.prixRevient|number_format(0,',',' ') }}</td>
                                <td class="text-center">
                                    {% if anomalie_produit.inventaire is empty and is_granted("ROLE_SUPPRESSION")  %}
                                        <a onClick="alerteS()" class="btn btn-danger" href="{{ path('app_logescom_stock_anomalie_produit_delete', {'id': anomalie_produit.id, 'origine': 'stock'}) }}"><i class="fa fa-trash"></i></a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">Aucune anomalie trouvée</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            

            <div class="pb-4 d-flex justify-content-between">
                <a class="btn btn-light" href="{{path("app_logescom_stock_gestion_stock_index", {lieu_vente : lieu_vente.id})}}">Retour</a>
            </div>
        </div>
    </div>

{% endblock %}
