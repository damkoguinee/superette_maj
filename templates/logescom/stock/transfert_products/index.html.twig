{% extends 'base_logescom.html.twig' %}
{% set queryParams = app.request.query.all %}
{% set queryString = queryParams|filter((v, k) => k != "page" and k != "transfert" and k != "id_stock") | url_encode %}

{% block title %}ajout transfert{% endblock %}
{% block bandeau %} {% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}

{% block produits %}
    {% if app.request.query.has('search') %}
        {% set search = app.request.query.get('search') %}
    {% else %}
        {% set search = search %}
    {% endif %}

    <div class="row">
        {% include "_common/_nav_stock_transfert.html.twig" %}
        <div class="col-sm-12 col-md-10" >
            {% include "_common/_messages_flash.html.twig" %}
            
            <table class="table table-bordered table-striped table-hover align-middle" >
                <thead class="sticky-top bg-info text-center text-white">
                    <tr>
                        <th class="bg-info" colspan="6">
                            <div class="d-flex justify-content-between">
                                <a href="{{path("app_logescom_stock_transfert_products_new", {lieu_vente : lieu_vente.id})}}" class="btn btn-primary">Crée un transfert</a>
                                <form class="d-flex" role="search">
                                    <input class="form-control me-2" type="search" name="search" placeholder="Search" aria-label="Search">
                                    <input class="form-control" type="hidden" name="magasin" value="{{magasin.id}}">
                                    <button class="btn btn-outline-success" type="submit">Search</button>
                                </form>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th>N°</th>
                        <th>Date Transfert</th>
                        <th>Description</th>
                        <th>Transférer à</th>
                        <th>Frais transfert</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for key, liste_transfert in liste_transferts %}
                        {% if liste_transfert.etat == 'clos' %}
                            {% set color = 'success' %}
                        {% else %}
                        {% set color = '' %}                            
                        {% endif %}                       
                        <tr>
                            <td class="text-center bg-{{color}}">{{ key +1 }}</td>
                            <td class="text-center bg-{{color}}">{{ liste_transfert.dateEnvoi | date("d/m/Y") }}</td>
                            <td class="bg-{{color}}">{{ liste_transfert.description|ucwords }}</td>
                            <td class="bg-{{color}}">{{ liste_transfert.lieuVenteRecep.lieu|ucwords }}</td>
                            <td class="text-end bg-{{color}}" >{{ liste_transfert.chargesTransfert|number_format(0,',',' ') }}</td>
                            <td class="text-center">
                                {% if liste_transfert.etat == "crée" and liste_transfert.lieuVenteDepart.id == app.user.lieuVente.id and is_granted("ROLE_MODIFICATION") %}
                                    <a href="{{path("app_logescom_stock_transfert_products", {id : liste_transfert.id, lieu_vente : lieu_vente.id})}}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                {% elseif is_granted('ROLE_ADMIN') and (liste_transfert.etat == "crée" or liste_transfert.etat == "en-cours" ) %}
                                    <a href="{{path("app_logescom_stock_transfert_products", {id : liste_transfert.id, lieu_vente : lieu_vente.id})}}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                                    
                                {% endif %}

                                <a href="{{path("app_logescom_stock_transfert_products_show", {id : liste_transfert.id, lieu_vente : lieu_vente.id})}}" class="btn btn-success"><i class="fa fa-eye"></i></a>
                            </td>                            
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun transfert crée</td>
                        </tr>
                    {% endfor %}
                </tbody>   
            </table>
        </div>
    </div>

{% endblock %}
