{% extends 'base_logescom.html.twig' %}
{% set queryParams = app.request.query.all %}
{% set queryString = queryParams|filter((v, k) => k != "page" and k != "ajustement" and k != "id_stock") | url_encode %}

{% block title %}liste des proformats{% endblock %}
{% block bandeau %} {% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}

{% block produits %}

    {% if app.request.query.has('search') %}
        {% set search = app.request.query.get('search') %}
    {% else %}
        {% set search = search %}
    {% endif %}

    {% if app.request.query.has('date1') %}
        {% set date1 = app.request.query.get('date1') %}
        {% set date2 = app.request.query.get('date2') %}

    {% else %}
        {% set date1 = "now"|date("Y-01-01") %}
        {% set date2 = "now"|date("Y-m-d") %}
    {% endif %}

    {% set nbrePages = proformats.nbrePages %}
    {% set pageEncours = proformats.pageEncours %} 
    {% set id = lieu_vente.id %}

    <div class="row my-2">
        {% include "_common/_nav_facturation_vente.html.twig" %}

        <div class="col-sm-12 col-md-10">
            {{ include("_common/_messages_flash.html.twig") }}
        
            <table class="table table-bordered table-striped table-hover align-middle">

                <thead class="sticky-top bg-light text-center">
                    <tr>
                        <th colspan="11" class="text-center bg-info text-white">
                            Liste des proformats 
                            <a class="btn btn-warning" href="{{ path('app_logescom_vente_facturation_vente', {lieu_vente : lieu_vente.id}) }}">Enregistrer une vente</a>
                        </th>
                    </tr>
                    <tr>
                        <th colspan="7" class="text-center bg-info text-white">
                            <div class="row align-items-center ">
                                <div class="col-6">
                                    <form class="form w-100">
                                        <div class="row">
                                            <div class="col-sm-12 col-md-5">
                                                <input type="date" name="date1" value="{{ date1 }}" class="form-control" onChange="this.form.submit()" max="{{ date2 }}"> 
                                            </div>
                                            <div class="col-1">au</div>
                                            <div class="col-sm-12 col-md-6">
                                                <input type="date" name="date2" value="{{ date2 }}" class="form-control" onChange="this.form.submit()" min="{{ date1}}" max="{{ "now"|date("Y-m-d") }}">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-3">
                                    <input type="text" name="search" class="form-control" id="search_client" placeholder="Récherchez un client">
                                </div>
                                
                                <div class="col-3">
                                    <input type="text" name="search" class="form-control" id="search_personnel" placeholder="Récherchez par vendeur">
                                </div>
                                <div class="bg-light text-white" id="result-search"></div>
                                <div class="bg-light text-white" id="result_search_personnel"></div>
                            </div>
                        </th>
                    <tr>
                    <tr>
                        <th class="bg-info text-white">N°</th>
                        <th class="bg-info text-white">N° Proformat</th>
                        <th class="bg-info text-white">Date</th>
                        <th class="bg-info text-white">Client</th>
                        <th class="bg-info text-white">Total Facture</th>
                        <th class="bg-info text-white">Saisi Par</th>
                        <th class="bg-info text-white">actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for key, proformat in proformats.data %}
                    <tr>
                        <td class="text-center">
                            {{ (key +1) }}
                            <a target="_blank"  href="{{path("app_logescom_vente_proformat_facture", { id : proformat.id, lieu_vente : lieu_vente.id }) }}" ><i class="fa fa-file-pdf fs-3 text-success"></i></a>
                        </td>
                        <td class="text-center">{{ proformat.numeroProformat|strtoupper }}</td>

                        <td class="text-center">{{ proformat.dateSaisie ? proformat.dateSaisie|date('d/m/Y') : '' }}</td>

                        <td>{{ proformat.client ? (proformat.client.prenom|ucwords ~ " " ~ proformat.client.nom |strtoupper ) : ''}}</td>

                        <td class="text-end">{{ proformat.totalProformat|number_format(0,',',' ') }}</td>

                        <td>{{ proformat.saisiePar.prenom|ucwords }}</td>

                        <td class="text-center">
                            <a class="btn btn-success" href="{{ path('app_logescom_vente_proformat_show', {'id': proformat.id, lieu_vente : lieu_vente.id }) }}"><i class="fa fa-eye"></i></a>
                            <a class="btn btn-warning"  href="{{path("app_logescom_vente_proformat_vente", {id : proformat.id, lieu_vente : lieu_vente.id})}}"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11">Aucun proformat enregistré</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% set path = 'app_logescom_vente_proformat_index'  %}
                                  
            {% if nbrePages > 1 %}                    

                {% if nbrePages %}
                    <nav aria-label="Page navigation example ">
                        <ul class="pagination justify-content-start">
                            {% if pageEncours > 1 %}
                                <li class="page-item ">
                                    <a class="page-link" href="{{path(path, {lieu_vente : id, pageEncours : (pageEncours - 1), search : search})}}">&lt;</a>
                                </li>
                            {% else %}
                                <li class="page-item disabled" ><a class="page-link">&lt;</a></li>
                            {% endif %}
                            {% for page in 1..nbrePages %}                
                                <li class="page-item {{ ( page == pageEncours) ? 'active' : ''}} "><a class="page-link" href="{{path(path, {lieu_vente : id, pageEncours : page, search : search})}}">{{page}}</a></li>
                            {% endfor %}
                            {% if pageEncours < nbrePages %}
                                <li class="page-item "><a class="page-link" href="{{path(path, {lieu_vente : id,pageEncours : pageEncours + 1, search : search} ) }}">&gt;</a></li>
                            {% else %}
                                <li class="page-item disabled "><a href="" class="page-link" >&gt;</a></li>
                            {% endif %}
                            </li>
                        </ul>
                    </nav>
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}