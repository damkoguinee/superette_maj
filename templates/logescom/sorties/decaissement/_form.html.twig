{{ form_errors(form) }}
{{ form_start(form) }}
    {# <div class="row mb-1">
        {{ form_row(form.client) }}
    </div> #}

    <input type="hidden" name="client" value="{{client}}">

    <div class="row mb-1">
        {{ form_row(form.montant) }}
    </div>

    <div class="row mb-1">
        <div class="col-sm-12 col-md-2">
            {{ form_row(form.categorie) }}
        </div>
        <div class="col-sm-12 col-md-2">
            {{ form_row(form.devise) }}
        </div>

        <div class="col-sm-12 col-md-3">
            {{ form_row(form.modePaie) }}
        </div>

        <div class="col-sm-12 col-md-3">
            {{ form_row(form.numeroChequeBord) }}
        </div>
        
        <div class="col-sm-12 col-md-2">
            {{ form_row(form.banqueCheque) }}
        </div>
    </div>
    <div class="row mb-1">
        <div class="col-sm-12 col-md-4">
            {{ form_row(form.compteDecaisser) }}
        </div>
        <div class="col-sm-12 col-md-5">
            {{ form_row(form.commentaire) }}
        </div>
        <div class="col-sm-12 col-md-3">
            {{ form_row(form.dateDecaissement) }}
        </div>
    </div>
    <div class="row mb-1">
        <div class="col-sm-12 col-md-4">
            {{ form_row(form.document) }}
        </div>
    </div>
    <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}
