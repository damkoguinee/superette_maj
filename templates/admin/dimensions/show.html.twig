{% extends 'base_logescom_home.html.twig' %}

{% block title %}dimension{% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}

{% block produits %}
    <div class="row">
        {% include "_common/_nav_admin.html.twig" %}

        <div class="col-sm-12 col-md-10">
            {% include "_common/_messages_flash.html.twig" %}
            <h3 class="text-center">Dimension {{dimension.valeurdimension}}</h3>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ dimension.id }}</td>
                    </tr>
                    <tr>
                        <th>Dimension</th>
                        <td>{{ dimension.valeurDimension }}</td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <table class="table table-bordered table-striped table-hover align-middle">
                                <thead class="sticky-top bg-light text-center">
                                    <tr>
                                        <th colspan="4" class="bg-info">Liste des produits de la dimension {{ dimension.valeurdimension}} <a class="btn btn-primary" href="{{ path('app_admin_products_new') }}">Ajouter un produit</a></th>
                                    </tr>
                                    <tr>
                                        <th>N°</th>
                                        <th>Référence</th>
                                        <th>Désignation</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for key, product in products %}
                    
                                        <tr>
                                            <td class="text-center">
                                                {{ (key)+1 }}
                                                
                                            </td>
                                            <td>{{ product.reference }}</td>
                                            <td>{{ product.designation }}</td>
                                            <td class="text-center">
                                                <a class="btn btn-success" href="{{ path('app_admin_products_show', {'id': product.id}) }}"><i class="fa fa-eye"></i></a>
                                                <a class="btn btn-warning" href="{{ path('app_admin_products_edit', {'id': product.id}) }}"><i class="fa fa-edit"></i></a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4">Aucun produit trouvé</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>

                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="pb-4 d-flex justify-content-between">
                <a class="btn btn-secondary" href="{{ path('app_admin_dimensions_index') }}">Retour</a>

                <a class="btn btn-info" href="{{ path('app_admin_dimensions_edit', {'id': dimension.id}) }}"><i class="fa fa-edit"></i></a>

                {{ include('_common/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
