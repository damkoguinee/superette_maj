        <div class="row mb-1">
            {{ form_row(form.priorite) }}
        <div>
        
        <div class="row mb-1">
            {{ form_row(form.couverture) }}
        <div>
            <div class="row mb-1">
            {{ form_row(form.imgProduit) }}
        <div>
            <input type="hidden" name="description_defaut" value="{{form.vars.data.description}}">

