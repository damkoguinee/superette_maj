{% extends 'base_logescom_home.html.twig' %}
{% set queryParams = app.request.query.all %}
{% set queryString = queryParams|filter((v, k) => k != "page" and k != "ajustement" and k != "id_stock") | url_encode %}

{% block title %}liste des caisses{% endblock %}
{% block bandeau %} {% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}

{% block produits %}

    <div class="row my-2">
        {% include "_common/_nav_admin.html.twig" %}

        <div class="col-sm-12 col-md-10">
            {{ include("_common/_messages_flash.html.twig") }}
        
            <table class="table table-bordered table-striped table-hover align-middle">

                <thead class="sticky-top bg-light text-center">
                    <tr>
                        <th colspan="6" class="text-center bg-info text-white">
                            Liste des caisses 
                            <a class="btn btn-warning" href="{{ path('app_admin_caisse_new') }}">Enregistrer une caisse</a>
                        </th>
                    </tr>
                    <tr>
                        <th class="bg-info text-white">N°</th>
                        <th class="bg-info text-white">Designation</th>
                        <th class="bg-info text-white">Type</th>
                        <th class="bg-info text-white">N°Compte</th>
                        <th class="bg-info text-white">Document</th>
                        <th class="bg-info text-white">actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for key, caisse in caisses %}
                    <tr>
                        <td class="text-center">
                            {{ (key +1) }}                            
                        </td>
                        <td>{{ caisse.designation|ucfirst }}</td>
                        <td>{{ caisse.type|ucfirst }}</td>
                        <td>{{ caisse.numeroCompte|strtoupper }}</td>
                        <td class="text-center">{{ caisse.document|ucfirst }}</td>
                       
                       
                        <td class="text-center">
                            <a class="btn btn-warning" href="{{ path('app_admin_caisse_edit', {'id': caisse.id}) }}"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucune caisse enregistrée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}