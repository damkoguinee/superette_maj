{% extends 'base_logescom_home.html.twig' %}

{% block title %}liste des entreprises{% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}


 {% block produits %}
    <div class="row">
        {% include "_common/_nav_admin.html.twig" %}
        <div class="col-sm-12 col-md-10">            
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Identifiant</th>
                        <th>Agrément</th>
                        <th>Adresse</th>
                        <th>Téléphone</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entreprise in entreprises %}
                        <tr>
                            <td>{{ entreprise.nomEntreprise }}</td>
                            <td>{{ entreprise.identifiant }}</td>
                            <td>{{ entreprise.numeroAgrement }}</td>
                            <td>{{ entreprise.adresse }}</td>
                            <td>{{ entreprise.telephone }}</td>
                            <td>
                                <a class="btn btn-success" href="{{ path('app_admin_entreprise_show', {'id': entreprise.id}) }}"><i class="fa fa-eye"></i></a>
                                <a class="btn btn-warning" href="{{ path('app_admin_entreprise_edit', {'id': entreprise.id}) }}"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
