{% extends 'base_logescom_home.html.twig' %}
{% set queryParams = app.request.query.all %}
{% set queryString = queryParams|filter((v, k) => k != "page" and k != "ajustement" and k != "id_stock") | url_encode %}

{% block title %}liste des configuration_logiciels{% endblock %}
{% block bandeau %} {% endblock %}
 {% block carousel %}
    <div id="carouselExampleAutoplaying" class="carousel slide py-2" data-bs-ride="carousel">
    </div>
 {% endblock %}
 {% block categories %} {% endblock %}
 {% block contact %} {% endblock %}
 {% block collaborateurs %} {% endblock %}
 {% block scroll %} {% endblock %}
 {% block footer %} {% endblock %}
 {% block social %} {% endblock %}

{% block produits %}

    <div class="row my-2">
        {% include "_common/_nav_admin.html.twig" %}

        <div class="col-sm-12 col-md-10">
            {{ include("_common/_messages_flash.html.twig") }}
        
            <table class="table table-bordered table-striped table-hover align-middle">

                <thead class="sticky-top bg-light text-center">
                    <tr>
                        <th colspan="7" class="text-center bg-info text-white">
                            Liste des configuration_logiciels 
                            <a class="btn btn-warning" href="{{ path('app_admin_configuration_logiciel_new') }}">Enregistrer une configuration_logiciel</a>
                        </th>
                    </tr>
                    <tr>
                        <th class="bg-info text-white">N°</th>
                        <th class="bg-info text-white">Couleur Facture</th>
                        <th class="bg-info text-white">Couleur Fond Fact</th>
                        <th class="bg-info text-white">Format Facture</th>
                        <th class="bg-info text-white">Caisse</th>
                        <th class="bg-info text-white">Livraison directe</th>
                        <th class="bg-info text-white">actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for key, configuration_logiciel in configuration_logiciels %}
                    <tr>
                        <td class="text-center">
                            {{ (key +1) }}                            
                        </td>
                        <td>{{ configuration_logiciel.color }}</td>
                        <td>{{ configuration_logiciel.backgroundColor }}</td>
                        <td>{{ configuration_logiciel.formatFacture }}</td>
                        <td class="text-center">{{ configuration_logiciel.caisse }}</td>
                        <td>{{ configuration_logiciel.livraison }}</td>
                       
                       
                        <td class="text-center">
                            <a class="btn btn-warning" href="{{ path('app_admin_configuration_logiciel_edit', {'id': configuration_logiciel.id}) }}"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Aucune configuration_logiciel enregistrée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}